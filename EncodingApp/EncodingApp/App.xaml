<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EncodingApp"
             x:Class="EncodingApp.App">
    <Application.Resources>
        <Color x:Key="Primary">#898AA6</Color>
        <Color x:Key="Secondary">#C9BBCF</Color>
        <Color x:Key="Accent">#B7D3DF</Color>
        <Color x:Key="Text">#D6EFED</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource Text}"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="TextColor" Value="{StaticResource Text}"/>
        </Style>
    </Application.Resources>
</Application>
